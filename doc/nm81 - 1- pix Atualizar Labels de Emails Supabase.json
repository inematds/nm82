    {
      "parameters": {
        "jsCode": "const out = [];\nfor (const item of $input.all()) {\n  const messageId = item.json.id || item.json.message_id;\n  const bins = item.binary || {};\n  let idx = 0; // contador de anexos\n  for (const [key, bin] of Object.entries(bins)) {\n    const mt = (bin.mimeType || 'application/octet-stream').toLowerCase();\n    if (/^text\\/(plain|html)$/.test(mt)) continue;\n\n    const raw = bin.fileName || key || 'attachment';\n    const filename = raw.replace(/[^\\w.\\-]+/g, '_').slice(0, 255);\n\n    // adiciona o índice no final do nome\n    const uniqueFilename = `${idx}_${filename}`;\n    const storagePath = `emails/${messageId}/${uniqueFilename}`;\n\n    out.push({ \n      json: { \n        message_id: messageId, \n        filename: uniqueFilename, \n        mime_type: bin.mimeType || 'application/octet-stream', \n        size: bin.fileSize || 0, \n        storage_path: storagePath\n      }, \n      binary: { \n        data: bin \n      } \n    });\n\n    idx++; // incrementa o índice\n  }\n}\nreturn out;\n"
      },
