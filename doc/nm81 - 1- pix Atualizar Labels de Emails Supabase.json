      "parameters": {
        "jsCode": "const output = [];\n\nfor (const item of $input.all()) {\n  const msg = item.json;\n\n  console.log('Processing email ID:', msg.id);\n\n  const getHeader = (name) => {\n    let headers = [];\n    if (msg.payload && msg.payload.headers) {\n      headers = msg.payload.headers;\n    } else if (msg.headers) {\n      headers = msg.headers;\n    }\n    if (!Array.isArray(headers)) return '';\n    const h = headers.find(h => h.name && h.name.toLowerCase() === name.toLowerCase());\n    return h ? (h.value || '') : '';\n  };\n\n  let from = msg.from || getHeader('From') || '';\n  let to = msg.to || getHeader('To') || '';\n  let subject = msg.subject || getHeader('Subject') || '';\n  let bodyText = msg.textPlain || msg.plainText || msg.text || '';\n  let bodyHtml = msg.textHtml || msg.html || '';\n\n  if (!bodyText && msg.payload) {\n    if (msg.payload.body && msg.payload.body.data) {\n      try {\n        bodyText = Buffer.from(msg.payload.body.data.replace(/-/g, '+').replace(/_/g, '/'), 'base64').toString('utf8');\n      } catch (e) {}\n    }\n    if (!bodyText && msg.payload.parts) {\n      for (const part of msg.payload.parts) {\n        if (part.mimeType === 'text/plain' && part.body && part.body.data) {\n          try {\n            bodyText = Buffer.from(part.body.data.replace(/-/g, '+').replace(/_/g, '/'), 'base64').toString('utf8');\n            break;\n          } catch (e) {}\n        }\n      }\n    }\n  }\n\n  if (!bodyHtml && msg.payload && msg.payload.parts) {\n    for (const part of msg.payload.parts) {\n      if (part.mimeType === 'text/html' && part.body && part.body.data) {\n        try {\n          bodyHtml = Buffer.from(part.body.data.replace(/-/g, '+').replace(/_/g, '/'), 'base64').toString('utf8');\n          break;\n        } catch (e) {}\n      }\n    }\n  }\n\n  let dateReceived = null;\n  const dateStr = msg.date || getHeader('Date') || msg.internalDate;\n  if (dateStr) {\n    try {\n      if (typeof dateStr === 'number' || /^\\d+$/.test(dateStr)) {\n        dateReceived = new Date(parseInt(dateStr)).toISOString();\n      } else {\n        dateReceived = new Date(dateStr).toISOString();\n      }\n    } catch (e) {}\n  }\n\n  let labels = msg.labelIds || msg.labels || [];\n  let attachmentsCount = 0;\n  if (Array.isArray(msg.attachments)) {\n    attachmentsCount = msg.attachments.length;\n  } else if (msg.payload && msg.payload.parts) {\n    attachmentsCount = msg.payload.parts.filter(p => p.filename && p.filename.length > 0 && !/^text\\/(plain|html)$/.test(p.mimeType)).length;\n  }\n\n  let rawHeaders = [];\n  if (msg.payload && msg.payload.headers) {\n    rawHeaders = msg.payload.headers;\n  } else if (msg.headers) {\n    rawHeaders = msg.headers;\n  }\n\n  console.log('Extraídos:', { from: from || 'VAZIO', to: to || 'VAZIO', subject: subject || 'VAZIO', bodyText: bodyText ? 'OK' : 'VAZIO', date: dateReceived || 'VAZIO' });\n\n  output.push({\n    json: {\n      message_id: msg.id || '',\n      thread_id: msg.threadId || null,\n      from: from,\n      to: to,\n      subject: subject,\n      snippet: msg.snippet || '',\n      body_text: bodyText,\n      body_html: bodyHtml,\n      date_received: dateReceived,\n      labels: labels,\n      attachments_count: attachmentsCount,\n      raw_headers: rawHeaders\n    }\n  });\n}\n\nreturn output;"
      },
