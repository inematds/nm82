# ============================================
# DATABASE CONFIGURATION
# ============================================

# Supabase Pooler (Transaction mode - recommended for production)
# Works through firewalls - uses port 6543
# Format: postgresql://postgres.PROJECT_REF:PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres?pgbouncer=true
# Example region: us-east-1, sa-east-1, eu-west-1, etc.
DATABASE_URL="postgresql://postgres.PROJECT_REF:YOUR_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Backup - Direct connection (may be blocked by firewall)
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres?sslmode=require"

# ============================================
# SUPABASE
# ============================================

# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_REF.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ============================================
# NEXTAUTH
# ============================================

# Application URL
NEXTAUTH_URL="http://localhost:3000"

# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"

# ============================================
# N8N WEBHOOKS (optional)
# ============================================

N8N_WEBHOOK_URL="https://your-n8n-instance.com/webhook"
N8N_APPROVAL_EMAIL_WEBHOOK="https://your-n8n-instance.com/webhook/approval-email"
N8N_REJECTION_EMAIL_WEBHOOK="https://your-n8n-instance.com/webhook/rejection-email"

# ============================================
# APP CONFIGURATION
# ============================================

NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"
